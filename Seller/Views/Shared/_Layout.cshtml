<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/Seft.css" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>@ViewBag.Title - BestSeller</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top ">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">
                Watch Seller
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav col-sm-4">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About">About</a>
                    </li>
                </ul>
                <ul style="padding-left:30%;" class ="navbar-nav nav-item col-xl-8">

                    @if (Seller.Models.GlobalVari.isLog)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Login/userPage"><i class="fas fa-user"></i> @Seller.Models.GlobalVari.userLog</a></li>

                    }
                    else
                    {
                        <li class=" nav-item"><a class=" nav-link" href="#"><i class="fas fa-shopping-cart"></i> Gio Hang</a></li>
                        <li class="nav-item"><a class="nav-link" href="\Login\Signup"><i class="fas fa-user"></i> Sign Up</a></li>
                        <li class="nav-item"><a class="nav-link" data-toggle="modal" data-target="#login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
                       
                        
                    }

                </ul>

            </div>

        </div>
    </nav>
    @*<div class="jumbotron text-center" style="margin-bottom:0; color:white; background-image:url(/Data/watch.png);background-size:cover;
        background-repeat: no-repeat;">
               <h1>Come With Us </h1>
               <p>Choose the bezt watch for U</p>
           </div>*@
    <h1>&nbsp;</h1>
    <div class="container body-content">

        @RenderBody()

        <footer class="navbar fixed-bottom">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
<div class="modal fade" id="login">
    <div class="modal-dialog-centered modal-dialog ">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Login</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <form class="navbar-form col-lg-12 center-block" action="/Login/Login" method="post">
                    <p>
                        <i>username: </i>
                        <input class=" form-control" type="text" name="Username" />

                    </p>
                    <p>
                        <i>password: </i>
                        <input class="form-control" type="password" name="Password" />
                    </p>
                    <p></p>
                    <h4>
                        <a href="#"><u><small><i>i forget my password</i></small></u></a>
                        <button class="btn btn-danger" type="submit" name="loginSubmit">Log-in</button>
                    </h4>
                </form>
            </div>
        </div>
    </div>
</div>

</html>